<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
        <property name="dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        
<!--         
        <property name="connection.url">
            jdbc:mysql://localhost:3306/shop
        </property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="connection.driver_class">
            com.mysql.jdbc.Driver
        </property> 
        -->
        
        <property name="show_sql">true</property>
        <!-- 配置二级缓存提供商，注意此处并不是缓存的jar包 -->
        <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
        
        <mapping class="com.shop.model.Category" />
        <mapping class="com.shop.model.Account" />
        <mapping class="com.shop.model.Product" />
        <mapping class="com.shop.model.User" />
        <mapping class="com.shop.model.Status" />
        <mapping class="com.shop.model.Forder" />
        <mapping class="com.shop.model.Sorder" />
        <mapping class="com.shop.model.Project" />
        
        <!-- 配置那些累支持缓存，我们用于首页的热门商品展示，所以Product类支持缓存 -->
        <!-- <class-cache usage="read-only" class="com.shop.model.Product"/> -->
        <class-cache usage="read-write" class="com.shop.model.Product"/>

    </session-factory>

</hibernate-configuration>